---
// Composant pour basculer entre les thèmes clair/sombre
---

<button
  class="p-2 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
  aria-label="Basculer le thème"
  id="theme-toggle"
  type="button"
>
  <!-- Icône soleil (visible en mode clair) -->
  <span class="block dark:hidden">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
    </svg>
  </span>
  
  <!-- Icône lune (visible en mode sombre) -->
  <span class="hidden dark:block">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
    </svg>
  </span>
</button>

<script>
  // Fonction pour basculer le thème
  function toggleTheme() {
    const html = document.documentElement;
    const isDark = html.classList.toggle('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    console.log('Thème changé:', isDark ? 'dark' : 'light');
    
    // Mettre à jour l'indicateur de débogage si présent
    const indicator = document.getElementById('theme-indicator');
    if (indicator) {
      indicator.textContent = isDark ? 'Sombre' : 'Clair';
    }
  }

  // Attacher l'événement au chargement
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('theme-toggle');
    if (toggle) {
      toggle.addEventListener('click', toggleTheme);
      console.log('Bouton de thème initialisé');
    } else {
      console.error('Bouton de thème non trouvé');
    }
  });
</script>
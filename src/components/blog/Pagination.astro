---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;

const getPageUrl = (page: number) => {
  const prefix = '/CSE-Mada';
  if (page === 1) return `${prefix}${baseUrl}`;
  return `${prefix}${baseUrl}/page/${page}`;
};

// Nombre maximum de numéros de page à afficher
const maxVisiblePages = 5;
let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);

if (endPage - startPage + 1 < maxVisiblePages) {
  startPage = Math.max(1, endPage - maxVisiblePages + 1);
}

const pages = [];
for (let i = startPage; i <= endPage; i++) {
  pages.push(i);
}
---

{totalPages > 1 && (
  <nav class="flex items-center justify-between border-t border-gray-200 dark:border-gray-700 px-4 sm:px-0 mt-12">
    <div class="-mt-px w-0 flex-1 flex">
      {currentPage > 1 && (
        <a 
          href={getPageUrl(currentPage - 1)}
          class="border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-500"
        >
          <svg class="mr-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Précédent
        </a>
      )}
    </div>
    
    <div class="hidden md:-mt-px md:flex">
      {startPage > 1 && (
        <>
          <a href={getPageUrl(1)} class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-500 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium">
            1
          </a>
          {startPage > 2 && (
            <span class="border-transparent text-gray-500 dark:text-gray-400 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium">
              ...
            </span>
          )}
        </>
      )}
      
      {pages.map((page) => (
        <a 
          href={getPageUrl(page)}
          class={`${page === currentPage 
            ? 'border-green-500 text-green-600 dark:text-green-400' 
            : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-500'
          } border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium`}
          aria-current={page === currentPage ? 'page' : undefined}
        >
          {page}
        </a>
      ))}
      
      {endPage < totalPages && (
        <>
          {endPage < totalPages - 1 && (
            <span class="border-transparent text-gray-500 dark:text-gray-400 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium">
              ...
            </span>
          )}
          <a href={getPageUrl(totalPages)} class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-500 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium">
            {totalPages}
          </a>
        </>
      )}
    </div>
    
    <div class="-mt-px w-0 flex-1 flex justify-end">
      {currentPage < totalPages && (
        <a 
          href={getPageUrl(currentPage + 1)}
          class="border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-500"
        >
          Suivant
          <svg class="ml-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      )}
    </div>
  </nav>
)}

<style>
  nav a {
    transition: all 0.2s ease;
  }
  
  nav a:hover {
    color: #10b981;
    border-color: #10b981;
  }
  
  /* Style pour la page active */
  nav a[aria-current="page"] {
    color: #10b981;
    font-weight: 600;
  }
  
  /* Animation pour les flèches de navigation */
  nav a:hover svg {
    transform: translateX(2px);
  }
  
  nav a:first-child:hover svg {
    transform: translateX(-2px);
  }
  
  nav svg {
    transition: transform 0.2s ease;
  }
</style>

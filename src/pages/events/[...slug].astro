---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const events = await getCollection('events');
  return events.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await event.render();
const base = import.meta.env.BASE_URL;

const { title, description, date, location, image, activity, isFlyerOnly } = event.data;

function formatDate(date: Date) {
  return new Intl.DateTimeFormat('fr-FR', {
    weekday: 'long',
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  }).format(date);
}
---

<Layout title={title} description={description}>
  <article class="min-h-screen bg-white dark:bg-gray-900 pb-20">
    {/* Hero Section */}
    <div class="relative h-[50vh] min-h-[400px] w-full overflow-hidden">
      {
        image ? (
          <>
            <div class="absolute inset-0">
              <img src={`${base}/${image}`} alt={title} class="w-full h-full object-cover" />
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/40 to-transparent" />
            </div>
          </>
        ) : (
          <div class="absolute inset-0 bg-gradient-to-br from-blue-600 to-purple-800" />
        )
      }

      <div class="absolute bottom-0 left-0 right-0 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
        <div class="max-w-3xl">
          {
            activity && (
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-600 text-white mb-4 shadow-lg">
                {activity}
              </span>
            )
          }
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight shadow-sm"
          >
            {title}
          </h1>
          <div class="flex flex-wrap gap-6 text-gray-200 text-lg">
            <div class="flex items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 mr-2 text-blue-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                ></path>
              </svg>
              <span class="capitalize">{formatDate(date)}</span>
            </div>
            {
              location && (
                <div class="flex items-center">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 mr-2 text-blue-400"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                  {location}
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-10 relative z-10">
      <div class="flex flex-col lg:flex-row gap-8">
        {/* Main Content */}
        <div class="flex-1">
          <div
            class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 md:p-12 border border-gray-100 dark:border-gray-700"
          >
            {
              isFlyerOnly ? (
                <div class="flex flex-col items-center">
                  {image && (
                    <div class="w-full rounded-xl overflow-hidden shadow-lg mb-8">
                      <img src={`${base}/${image}`} alt={`Affiche pour ${title}`} class="w-full h-auto" />
                    </div>
                  )}
                  <div class="prose prose-lg dark:prose-invert max-w-none w-full">
                    <Content />
                  </div>
                </div>
              ) : (
                <div class="prose prose-lg dark:prose-invert max-w-none">
                  <p class="lead text-xl text-gray-600 dark:text-gray-300 mb-8 not-prose font-medium">
                    {description}
                  </p>
                  <Content />
                </div>
              )
            }
          </div>
        </div>

        {/* Sidebar / Info Card */}
        <div class="lg:w-80 flex-shrink-0">
          <div
            class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-100 dark:border-gray-700 sticky top-24"
          >
            <h3
              class="text-lg font-bold text-gray-900 dark:text-white mb-4 border-b border-gray-200 dark:border-gray-700 pb-2"
            >
              Détails pratiques
            </h3>

            <div class="space-y-4">
              <div>
                <span class="block text-sm text-gray-500 dark:text-gray-400">Date</span>
                <span class="block font-medium text-gray-900 dark:text-white capitalize"
                  >{formatDate(date)}</span
                >
              </div>

              {
                location && (
                  <div>
                    <span class="block text-sm text-gray-500 dark:text-gray-400">Lieu</span>
                    <span class="block font-medium text-gray-900 dark:text-white">{location}</span>
                  </div>
                )
              }

              {
                activity && (
                  <div>
                    <span class="block text-sm text-gray-500 dark:text-gray-400">
                      Type d'activité
                    </span>
                    <span class="block font-medium text-gray-900 dark:text-white">{activity}</span>
                  </div>
                )
              }
            </div>

            <div class="mt-8">
              <a
                href="/CSE-Mada/contact"
                class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-xl transition-colors shadow-md hover:shadow-lg"
              >
                Je participe
              </a>
              <p class="text-xs text-center text-gray-500 dark:text-gray-400 mt-3">
                Contactez-nous pour réserver votre place
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</Layout>

---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Récupérer les paramètres de la route
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Récupérer les données de l'article
const { entry } = Astro.props;
const { Content } = await entry.render();

// Récupérer les articles similaires (mêmes tags)
const relatedPosts = (await getCollection('blog', ({ data, id }) => {
  if (id === entry.id) return false; // Exclure l'article actuel
  if (data.draft && import.meta.env.PROD) return false;
  
  // Vérifier les tags communs
  const commonTags = data.tags.filter(tag => entry.data.tags.includes(tag));
  return commonTags.length > 0;
})).slice(0, 3); // Limiter à 3 articles similaires
---

<Layout 
  title={`${entry.data.title} - Blog CSEM`} 
  description={entry.data.description}
  image={entry.data.image}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white sm:text-5xl md:text-6xl">
          {entry.data.title}
        </h1>
        
        <div class="mt-6 flex justify-center items-center space-x-4 text-gray-500 dark:text-gray-400">
          <div class="flex items-center">
            <svg class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
            <span>{entry.data.author}</span>
          </div>
          <span>•</span>
          <time datetime={entry.data.pubDate.toISOString()} class="flex items-center">
            <svg class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            {new Date(entry.data.pubDate).toLocaleDateString('fr-FR', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
        </div>
        
        {entry.data.updatedDate && (
          <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">
            Mis à jour le {new Date(entry.data.updatedDate).toLocaleDateString('fr-FR', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </div>
        )}
      </div>
      
      {entry.data.image && (
        <div class="mt-8 rounded-lg overflow-hidden">
          <img 
            src={entry.data.image} 
            alt={entry.data.title}
            class="w-full h-auto max-h-96 object-cover"
            loading="lazy"
          />
        </div>
      )}
      
      {entry.data.tags && entry.data.tags.length > 0 && (
        <div class="mt-6 flex flex-wrap justify-center gap-2">
          {entry.data.tags.map((tag) => (
            <a 
              href={`/blog/tag/${tag.toLowerCase()}`}
              class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 px-3 py-1 rounded-full hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>
    
    <div class="prose dark:prose-invert prose-lg max-w-none">
      <Content />
    </div>
    
    {/* Partager l'article */}
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-6">Partager cet article</h3>
      <div class="flex flex-wrap gap-4">
        <!-- Facebook -->
        <a 
          href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 px-4 py-2 bg-[#1877F2] text-white rounded-md hover:bg-[#166FE5] transition-colors"
          aria-label="Partager sur Facebook"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
          </svg>
          <span>Facebook</span>
        </a>
        
        <!-- Twitter -->
        <a 
          href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(entry.data.title)}&via=CSEMadagascar`}
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 px-4 py-2 bg-[#1DA1F2] text-white rounded-md hover:bg-[#1a8cd8] transition-colors"
          aria-label="Partager sur Twitter"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84z"/>
          </svg>
          <span>Twitter</span>
        </a>
        
        <!-- LinkedIn -->
        <a 
          href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 px-4 py-2 bg-[#0A66C2] text-white rounded-md hover:bg-[#0959aa] transition-colors"
          aria-label="Partager sur LinkedIn"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
          <span>LinkedIn</span>
        </a>
        
        <!-- WhatsApp -->
        <a 
          href={`https://api.whatsapp.com/send?text=${encodeURIComponent(entry.data.title + ' ' + Astro.url.href)}`}
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 px-4 py-2 bg-[#25D366] text-white rounded-md hover:bg-[#1da851] transition-colors"
          aria-label="Partager sur WhatsApp"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.498 14.382l-.261-.423a.75.75 0 00-.636-.35h-.008a.96.96 0 00-.162.015 11.24 11.24 0 01-1.69-.128 8.9 8.9 0 01-.86-.217 5.5 5.5 0 01-3.57-3.615 4.59 4.59 0 01-.21-.9 1.03 1.03 0 00-.01-.146.75.75 0 00-.21-.502l-.455-.444a.5.5 0 00-.632-.079l-.096.06a7.041 7.041 0 00-2.6 4.4 6.5 6.5 0 00.34 3.12 7.5 7.5 0 004.9 4.563 6.5 6.5 0 005.38-.624l.3-.187a.5.5 0 00.11-.697l-.91-1.257zM12 22a9.5 9.5 0 01-5.33-1.733 1 1 0 00-.94-.117 9.1 9.1 0 01-2.83.456A1.5 1.5 0 013 19.5V16a1.5 1.5 0 01.99-1.41 1 1 0 00.7-.95v-.02a9.5 9.5 0 0116.52-6.45 9.5 9.5 0 01-2.7 15.09 1 1 0 00-.56.9v.02a1.5 1.5 0 01-1.5 1.5H16a1.5 1.5 0 01-1.5-1.5v-.267A9.5 9.5 0 0112 22z"/>
          </svg>
          <span>WhatsApp</span>
        </a>
        
        <!-- Copier le lien -->
        <button 
          onclick="navigator.clipboard.writeText(window.location.href).then(() => { 
            const tooltip = document.getElementById('copy-tooltip');
            tooltip.textContent = 'Lien copié !';
            setTimeout(() => { tooltip.textContent = 'Copier le lien'; }, 2000);
          })"
          class="relative flex items-center justify-center gap-2 px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors group"
          aria-label="Copier le lien"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
          </svg>
          <span id="copy-tooltip">Copier le lien</span>
        </button>
      </div>
    </div>
    
    {/* Articles similaires */}
    {relatedPosts.length > 0 && (
      <div class="mt-16">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">Articles similaires</h3>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {relatedPosts.map(post => (
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
              {post.data.image && (
                <a href={`/blog/${post.slug}`} class="block h-48 overflow-hidden">
                  <img 
                    src={post.data.image} 
                    alt={post.data.title}
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                </a>
              )}
              
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {new Date(post.data.pubDate).toLocaleDateString('fr-FR', { 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </time>
                </div>
                
                <h4 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </a>
                </h4>
                
                <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">
                  {post.data.description}
                </p>
                
                <a 
                  href={`/blog/${post.slug}`} 
                  class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium transition-colors"
                >
                  Lire la suite
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    )}
  </article>
</Layout>

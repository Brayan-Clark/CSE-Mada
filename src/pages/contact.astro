---
import Layout from '../layouts/Layout.astro';

const contactInfo = {
  phone: '+261 34 21 807 57 / 032 75 170 48',
  email: 'camping.storeevent@gmail.com',
  address: 'Lazaret nord, Antsiranana MADAGASCAR',
  hours: [
    { day: 'Lundi - Vendredi', time: '9h - 18h' },
    { day: 'Samedi', time: '10h - 17h' },
    { day: 'Dimanche', time: 'Fermé' },
  ]
};

const services = [
  'Réservation',
  'Informations',
  'Location de matériel',
  'Événements',
  'Autre demande'
];
---

<Layout title="Contact - Camping Nature & Aventures" description="Contactez-nous pour toute question ou réservation.">
  <!-- Hero Section -->
  <div class="relative bg-gray-900 overflow-hidden">
    <div class="absolute inset-0">
      <img class="w-full h-full object-cover opacity-40" src="https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Contactez-nous">
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 to-transparent"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
        Contactez-nous
      </h1>
      <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-300">
        Notre équipe est là pour répondre à toutes vos questions
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:py-20 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Nos coordonnées</h2>
          
          <div class="space-y-6">
            <!-- Adresse -->
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-green-100 dark:bg-green-900/30 p-2 rounded-lg">
                <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Adresse</h3>
                <p class="text-gray-600 dark:text-gray-300">{contactInfo.address}</p>
              </div>
            </div>

            <!-- Téléphone -->
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-green-100 dark:bg-green-900/30 p-2 rounded-lg">
                <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Téléphone</h3>
                <a href={`tel:${contactInfo.phone.replace(/\s+/g, '')}`} class="text-gray-600 hover:text-green-600 dark:text-gray-300 dark:hover:text-green-400 transition-colors">
                  {contactInfo.phone}
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-green-100 dark:bg-green-900/30 p-2 rounded-lg">
                <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Email</h3>
                <a href={`mailto:${contactInfo.email}`} class="text-gray-600 hover:text-green-600 dark:text-gray-300 dark:hover:text-green-400 transition-colors">
                  {contactInfo.email}
                </a>
              </div>
            </div>

            <!-- Horaires -->
            <div class="flex items-start">
              <div class="flex-shrink-0 bg-green-100 dark:bg-green-900/30 p-2 rounded-lg">
                <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Horaires d'ouverture</h3>
                <dl class="space-y-2">
                  {contactInfo.hours.map((item, index) => (
                    <div key={index} class="flex justify-between max-w-xs">
                      <dt class="text-gray-600 dark:text-gray-300">{item.day}</dt>
                      <dd class="text-gray-900 dark:text-white font-medium">{item.time}</dd>
                    </div>
                  ))}
                </dl>
              </div>
            </div>
          </div>

          <!-- Carte Google Maps -->
          <div class="mt-12">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Trouvez-nous</h3>
            <div class="aspect-w-16 aspect-h-9 rounded-xl overflow-hidden shadow-lg">
              <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7921.81916399046!2d49.2915!3d-12.2792!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTLCsDE2JzQ1LjEiUyA0OcKwMTcnMDEuMSJF!5e0!3m2!1sfr!2smg!4v1629999999999!5m2!1sfr!2smg" 
                width="100%" 
                height="300" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy"
                class="w-full h-64 rounded-lg"
                title="Carte d'emplacement - Antsiranana, Madagascar">
              </iframe>
            </div>
            <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
              Parking gratuit disponible sur place pour nos clients.
            </p>
          </div>
        </div>

        <!-- Formulaire de contact -->
        <div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Formulaire de contact</h2>
          <form>
            <div class="space-y-6">
              <div>
                <label for="name" class="block text-lg font-medium text-gray-900 dark:text-gray-100">Nom</label>
                <input type="text" id="name" class="block w-full p-3 mt-1 text-lg text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors" />
              </div>
              <div>
                <label for="email" class="block text-lg font-medium text-gray-900 dark:text-gray-100">Email</label>
                <input type="email" id="email" class="block w-full p-3 mt-1 text-lg text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors" />
              </div>
              <div>
                <label for="phone" class="block text-lg font-medium text-gray-900 dark:text-gray-100">Téléphone</label>
                <input type="tel" id="phone" class="block w-full p-3 mt-1 text-lg text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors" />
              </div>
              <div>
                <label for="service" class="block text-lg font-medium text-gray-900 dark:text-gray-100">Service</label>
                <select id="service" class="block w-full p-3 mt-1 text-lg text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors">
                  {services.map((service, index) => (
                    <option key={index} value={service}>{service}</option>
                  ))}
                </select>
              </div>
              <div>
                <label for="message" class="block text-lg font-medium text-gray-900 dark:text-gray-100">Message</label>
                <textarea id="message" rows="6" class="block w-full p-3 mt-1 text-lg text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors"></textarea>
              </div>
            </div>
            <button type="submit" class="w-full p-3 mt-6 text-lg font-bold text-white bg-green-600 hover:bg-green-700 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900">
              Envoyer
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</Layout>

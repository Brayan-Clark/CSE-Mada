<Layout title="Galerie - Camping Nature & Aventures" description="Découvrez notre galerie photo et laissez-vous inspirer par nos paysages et activités de plein air.">
  <!-- Hero Section -->
  <div class="relative bg-gray-900 overflow-hidden">
    <div class="absolute inset-0">
      <img class="w-full h-full object-cover opacity-40" src="https://images.unsplash.com/photo-1501785888041-af3ef285b470?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Galerie photo">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gray-900 mix-blend-multiply"></div>
    </div>
    <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">Notre Galerie</h1>
      <p class="mt-6 text-xl text-gray-300 max-w-3xl">Découvrez nos plus beaux moments capturés lors de nos aventures en plein air.</p>
    </div>
  </div>

  <!-- Gallery Section -->
  <div class="bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
      <!-- Filter Buttons -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="filter-btn px-6 py-2 rounded-full bg-green-600 text-white font-medium hover:bg-green-700 dark:bg-green-700 dark:hover:bg-green-800 transition-colors duration-200" data-filter="all">
          Toutes les photos
        </button>
        <button class="filter-btn px-6 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 font-medium hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200" data-filter="nature">
          Nature
        </button>
        <button class="filter-btn px-6 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 font-medium hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200" data-filter="equipement">
          Équipement
        </button>
        <button class="filter-btn px-6 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 font-medium hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200" data-filter="activites">
          Activités
        </button>
      </div>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {images.map((image, index) => (
          <div class="gallery-item group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300" data-category={image.category}>
            <img 
              src={image.src} 
              alt={image.alt}
              class="w-full h-64 object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
              <p class="text-white font-medium">{image.alt}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-green-700">
    <div class="max-w-4xl mx-auto py-16 px-4 sm:px-6 sm:py-20 lg:px-8 lg:flex lg:items-center lg:justify-between">
      <h2 class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
        <span class="block">Prêt à vivre l'aventure ?</span>
        <span class="block text-green-100">Contactez-nous dès aujourd'hui.</span>
      </h2>
      <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0">
        <div class="inline-flex rounded-md shadow">
          <a href="/contact" class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-green-600 bg-white hover:bg-green-50">
            Nous contacter
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Filtrage des images
    document.addEventListener('DOMContentLoaded', () => {
      const filterBtns = document.querySelectorAll('.filter-btn');
      const galleryItems = document.querySelectorAll('.gallery-item');

      // Fonction pour vérifier le mode sombre
      const isDarkMode = document.documentElement.classList.contains('dark');
      
      filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
          // Mise à jour des styles des boutons
          filterBtns.forEach(b => {
            b.classList.remove('bg-green-600', 'dark:bg-green-700', 'text-white');
            b.classList.add('bg-gray-100', 'dark:bg-gray-800', 'text-gray-800', 'dark:text-gray-200');
          });
          btn.classList.remove('bg-gray-100', 'dark:bg-gray-800', 'text-gray-800', 'dark:text-gray-200');
          btn.classList.add('bg-green-600', 'dark:bg-green-700', 'text-white');

          const filter = btn.getAttribute('data-filter');
          
          galleryItems.forEach(item => {
            if (filter === 'all' || item.getAttribute('data-category') === filter) {
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });
        });
      });
    });
  </script>

  <style>
    /* Animation pour le chargement des images */
    .gallery-item {
      opacity: 0;
      animation: fadeIn 0.5s ease-in-out forwards;
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    /* Délais d'animation pour chaque élément */
    .gallery-item:nth-child(1) { animation-delay: 0.1s; }
    .gallery-item:nth-child(2) { animation-delay: 0.2s; }
    .gallery-item:nth-child(3) { animation-delay: 0.3s; }
    .gallery-item:nth-child(4) { animation-delay: 0.4s; }
    .gallery-item:nth-child(5) { animation-delay: 0.5s; }
    .gallery-item:nth-child(6) { animation-delay: 0.6s; }
    .gallery-item:nth-child(7) { animation-delay: 0.7s; }
    .gallery-item:nth-child(8) { animation-delay: 0.8s; }
    .gallery-item:nth-child(9) { animation-delay: 0.9s; }
    .gallery-item:nth-child(10) { animation-delay: 1.0s; }
    .gallery-item:nth-child(11) { animation-delay: 1.1s; }
    .gallery-item:nth-child(12) { animation-delay: 1.2s; }
  </style>
</Layout>
